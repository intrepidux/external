<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="account_payment_view_form" model="ir.ui.view">
            <field name="name">Pagos</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="type_payment_id" />
                </xpath>
            </field>
        </record>
    
        <record id="account_payment_register_view_form" model="ir.ui.view">
            <field name="name">Registrar pago</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="type_payment_id" widget="selection"/>
                </xpath>
            </field>
        </record>

    </data>
    

</odoo>
