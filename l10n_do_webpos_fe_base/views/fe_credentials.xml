<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_itx_fe_webpos_form" model="ir.ui.view">
            <field name="name">itx_fe_webpos.form</field>
            <field name="model">itx.fe.webpos</field>
            <field name="arch" type="xml">
                <form string="Credentials Webpos">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="branchCod" required="1"/>
                            <field name="posCod" required="1"/>
                            <field name="apk" required="1"/>
                            <field name="url_base" required="1"/>
                            <field name="active" />
                            <field name="company_id" required="1"/>
                            
                        </group>
                        <!-- <group>
                            <field name="xml_data_ids" context="{'form_view_initial_mode': 'edit'}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="xml_data"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </group> -->
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_itx_fe_webpos_tree" model="ir.ui.view">
            <field name="name">itx.fe.webpos.tree</field>
            <field name="model">itx.fe.webpos</field>
            <field name="arch" type="xml">
                <tree > 
                <!-- domain="[('company_id', '=', user.company_id)]"> limitar por compaÃ±ia activa -->
                    <field name="name"/>
                    <field name="branchCod"/>
                    <field name="posCod"/>
                    <field name="apk"/>
                    <field name="url_base"/>
                    <field name="active" />
                    <field name="company_id"/>
                    
                </tree>
            </field>
        </record>

        <!-- Main Menu Definition -->
        <record id="action_fe_webpos" model="ir.actions.act_window">
            <field name="name">Facturacion Electronica Webpos</field>
            <field name="res_model">itx.fe.webpos</field>
            <field name="view_mode">tree,form</field>       
 
        </record>

        <menuitem name="FE Webpos" id="l10n_do_webpos_fe_base.menu_root" sequence="115" groups="base.group_user"
                  web_icon="l10n_do_webpos_fe_base,static/description/icon.png" action="action_fe_webpos" 
                 />

    </data>
</odoo>
